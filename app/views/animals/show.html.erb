<div class="main-container">
  <div class="container py-5">
    <p class="btn btn-ariane"> <%= link_to 'back to list', animals_path%></p>
    <div class="info-title-animal align-items-center">
        <h1> <%= @animal.name %> </h1>
    </div>

    <div class="info-detail-animal">
      <div class="col-md-5">
        <div id="carousel" class="picture-animal-center" data-bs-ride="carousel">
          <div class="carousel-inner">
            <% @animal.photos.each do |photo| %>
              <div class="carousel-item active">
              <%# <img src="..." class="d-block w-100" alt="..."> %>
              <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill, :radius => 20 %>
              </div>
            <% end %>
              <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
              </button>
              <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
              </button>
          </div>
        </div>
        <div class="container-actions-show">
          <p class="btn btn-flat"> <%= link_to 'Book this animal', new_animal_booking_path(@animal)%> </p>
        </div>
      </div>

      <div class="col-md-7">
        <div class="description-animal">

          <div class="info-detail-animal">
            <i class="fas fa-signature"></i>
            <div class="animal-question-answer">
              <h3> How old I am?</h3>
              <p> I am not that old! I am <%= @animal.age %> years old</p>
            </div>
          </div>

          <div class="info-detail-animal">
            <i class="fas fa-signature"></i>
            <div class="animal-question-answer">
              <h3> What species I am?</h3>
              <p> I am a <%= @animal.specie %></p>
            </div>
          </div>

          <div class="info-detail-animal">
            <i class="fas fa-signature"></i>
            <div class="animal-question-answer">
              <h3> How can you feed me so that I'll be happy?</h3>
              <p> <%= @animal.diary %></p>
            </div>
          </div>

          <div class="info-detail-animal">
            <i class="fas fa-signature"></i>
            <div class="animal-question-answer">
              <h3> What is my size?</h3>
              <p> I am <%= @animal.size %> tall</p>
            </div>
          </div>


          <div class="info-detail-animal">
            <i class="fas fa-signature"></i>
            <div class="animal-question-answer">
              <h3> More about me?</h3>
              <p> <%= @animal.description %></p>
            </div>
          </div>

          <div class="info-detail-animal">
            <i class="fas fa-signature"></i>
            <div class="animal-question-answer">
              <h3> How much for a day together?</h3>
              <p> <%= @animal.price_per_day %>â‚¬</p>
            </div>
          </div>

          <div class="card-renter">
            <h2>Few reviews from previous renters</h2>
            <% if @animal.reviews.empty? %>
              <p class="btn btn-add-review"><%= link_to 'Be the first one to review this list', new_animal_review_path(@animal) %></p>
            <% else %>
              <% @animal.reviews.each do |review| %>

                <% review.rating&.times do %>
                  <i class="star-card fas fa-star"></i>
                <% end %>
                <p class="comment-review"> <%= review.comment %> </p>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
