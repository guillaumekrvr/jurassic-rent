      <% @animals.each do |animal| %>
      <li>

      <p><%=link_to animal.name, animal_path(animal) %></p>
      <p><%= animal.size %> cm </p>
      <p><%= animal.description %></p>
      <p><%= animal.price_per_day %>â‚¬</p>
      <p><%= animal.specie %></p>
