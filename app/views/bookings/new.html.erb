<div class ="container-general">
  <div class="cover mb-4 d-flex align-items-center justify-content-center">
    <div class="text-center">
      <h1>Make a booking for <%= @animal.name %></h1>
    </div>
  </div>
  <div class="container py-3">
    <%= simple_form_for [ @animal, @booking ] do |f| %>
      <%= f.input :start_date %>
      <%= f.input :end_date %>
      <%= f.input :price_booking %>
      <%= f.button :submit, class: "btn-flat" %>
    <% end %>
  </div>
</div>
