<div class="container-general">
  <div class ="container py-5">
    <div class="row">
        <div class="col-12 col-md-6 offset-lg-3">
          <h1>Make a booking for <%= @animal.name %></h1>
          <h3>Description</h3>
          <p><%= @animal.description %></p>
          <p><%= @animal.specie %></p>
            <%= simple_form_for [ @animal, @booking ] do |f| %>
              <p id="beg-date" class="start-date"><%= f.input :start_date %></p>
              <p class="end-date"><%= f.input :end_date %></p>
              <%= f.button :submit, class: "btn-flat" %>
            <% end %>
        </div>
    </div>
        <div class="price-card">
          <h3>Détails du prix</h3>
          <p id="price-per-day"><%= @animal.price_per_day %> € / Day</p>
          <p id="stay-day"> Number of days :</p>
          <p id="discount-stay"> Discount for long stay :</p>
          <p id="price-total"> Total Price :</p>
        </div>
        <div class="card-renter">
          <h2>Few reviews from previous renters</h2>
          <% @animal.reviews.each do |review| %>
            <li>
            <%= review.comment %>
            <%= review.rating %>
          <% end %>
        </div>
  </div>
</div>
